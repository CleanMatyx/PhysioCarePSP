<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.matias.physiocarepsp.viewscontroller.FirstViewController">
    <children>
        <VBox alignment="CENTER" spacing="30.0">
            <padding>
                <Insets top="40.0" right="40.0" bottom="40.0" left="40.0" />
            </padding>
            <HBox alignment="CENTER" spacing="15.0">
                <VBox alignment="CENTER_LEFT">
                    <Label text="PhysioCare" style="-fx-font-size: 30px; -fx-font-weight: bold;" />
                    <Label text=""/>
                </VBox>
            </HBox>
            <VBox alignment="CENTER" spacing="20.0">
                <Label text="Main Menu" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
                <Label text="Select an option to continue" style="-fx-font-size: 14px;" />
                <VBox spacing="15.0">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label text="Patients Management" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                        <Button fx:id="btnPatients" onAction="#openPatientsAction" text="Open" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label text="Physios Management" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                        <Button fx:id="btnPhysios" onAction="#openPhysiosAction" text="Open" />
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </children>
</StackPane>
